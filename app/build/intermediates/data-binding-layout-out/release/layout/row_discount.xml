<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:paddingTop="2dp"
    android:orientation="vertical">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="@dimen/size_img_avt_dialog"-->
        <!--android:layout_height="@dimen/size_img_h_avt_dialog"-->
        <!--android:clipToPadding="false"-->
        <!--app:cardCornerRadius="10dp"-->
        <!--&gt;-->


    <!--</android.support.v7.widget.CardView>-->

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:carbon_cornerRadius="10dp"
        android:background="@color/white"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_img_avt_dialog"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingLeft="36dp">

            <goixeom.com.CustomTextView
                android:id="@+id/tv_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="20sp" />

            <goixeom.com.CustomTextView
                android:id="@+id/tv_value_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="4dp"
                android:textSize="14sp" />

            <goixeom.com.CustomTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="end"
                android:textColor="@color/gray"
                android:textSize="14sp"
                />

        </LinearLayout>
        <goixeom.com.CustomTextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="end"
            android:textSize="12sp"
            android:padding="6dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="14dp"
            android:text="Xem chi tiáº¿t" />

    </carbon.widget.LinearLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img"
        android:layout_width="@dimen/size_img_avt_dialog"
        android:layout_height="@dimen/size_img_h_avt_dialog"
        android:scaleType="fitXY"
        android:layout_marginLeft="32dp"
        app:riv_corner_radius="8dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background" />
</carbon.widget.RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <goixeom.com.CustomTextView
            android:id="@+id/tv_news_photo_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_news"
            android:layout_marginTop="@dimen/margin_news"
            android:padding="8dp"
            android:text="18/02/2017"
            android:textColor="@color/color_pin"
            android:textSize="14sp" />

        <goixeom.com.CustomTextView
            android:id="@+id/tv_title_news_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margin_news"
            android:layout_marginTop="@dimen/margin_news"
            android:text="Tin tức mới"
            android:textColor="@color/color_pin"
            android:textSize="24sp" />
        <goixeom.com.CustomTextView
            android:id="@+id/tv_short_description_new_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margin_news"
            android:layout_marginTop="@dimen/margin_news"
            android:maxLines="6"
            android:text="First we had to create a Resources wrapper which overrides the getDrawable() call. For the purpose of this blog post we’ll call it ResourcesWrapper. Its getDrawable() first checks AppCompat’s own internal drawable manager for any custom drawable handling. If AppCompat doesn’t want to handle it, it just leaves it to the framework."
            android:textColor="@color/gray"
            android:textSize="16sp" />
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:el_duration="500"
            app:el_expanded="false">

            <goixeom.com.CustomTextView
                android:id="@+id/tv_content_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/margin_news"
                android:layout_marginTop="@dimen/margin_news"
                android:text="First we had to create a Resources wrapper which overrides the getDrawable() call. For the purpose of this blog post we’ll call it ResourcesWrapper. Its getDrawable() first checks AppCompat’s own internal drawable manager for any custom drawable handling. If AppCompat doesn’t want to handle it, it just leaves it to the framework."
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <!--<WebView-->
                <!--android:id="@+id/web"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
        </net.cachapa.expandablelayout.ExpandableLayout>

        <goixeom.com.CustomTextView
            android:id="@+id/tv_more_news_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_news"
            android:background="@color/gray_light"
            android:padding="16dp"
            android:paddingLeft="@dimen/margin_news"
            android:text="Xem chi tiết"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/color_pin"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
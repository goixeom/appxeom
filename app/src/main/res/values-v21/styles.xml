<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="android:textViewStyle">@style/RobotoFont</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/gray_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="AppThemeCard" parent="carbon_Theme.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="android:textViewStyle">@style/RobotoFont</item>
    </style>
    <style name="transparent" parent="Theme.AppCompat.Light">//AppCompat is the key; You can choose any other theme than the light-theme, but stick to AppCompat

        <item name="colorPrimaryDark">#00000000</item>//THIS is the important part.
        //Other styling(optional)
    </style>
    <style name="RobotoFont" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_text_selector</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/textTitleSize</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="AppThemeMap" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#00ffffff</item>
    </style>

    <style name="edt_code">
        <item name="android:textSize">@dimen/size_txt_code</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="RatingBarFull" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="loading">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#2fb35f</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="DialogProgress" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="DialogProgressBooking" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>
</resources>
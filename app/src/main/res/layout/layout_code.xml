<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    android:layout_marginTop="@dimen/margin_top_auth"

    >

    <LinearLayout
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/background_button"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp">

        <goixeom.com.CustomTextView
            android:id="@+id/txt"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.04" />

        <include layout="@layout/add_code" />

        <goixeom.com.CustomTextView
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_textview_bold" />

        <ImageView
            android:id="@+id/img_next2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:clickable="false"
            android:layout_marginTop="30dp"
            android:src="@drawable/selector_btn_arrow" />
    </LinearLayout>
</LinearLayout>

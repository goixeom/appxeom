<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_pass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="@dimen/margin_top_auth">

    <LinearLayout
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="25dp">

        <goixeom.com.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_passwork" />

        <goixeom.com.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Mật khẩu"
            android:textColor="@color/color_textview_bold"
            android:textSize="16dp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="0dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_passwork_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTintMode="@android:color/white"
                android:hint="Nhập mật khẩu của bạn"
                android:inputType="textPassword"
                android:textColorHint="@color/gray_light"
                android:textCursorDrawable="@null" />
        </android.support.design.widget.TextInputLayout>
        <!--<EditText-->
        <!--android:id="@+id/edt_passwork_login"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:background="@color/tab_indicator"-->
        <!--android:inputType="textPassword"-->
        <!--android:backgroundTintMode="@android:color/white"-->
        <!--android:textColorHint="@color/hint_color"-->
        <!--android:textCursorDrawable="@null" />-->

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/white" />

        <goixeom.com.CustomTextView
            android:id="@+id/txt_forget_passowrk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="?selectableItemBackground"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:text="Tôi đã quên mật khẩu ?"
            android:textColor="@color/tab_text_selector"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_next1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/selector_btn_arrow" />
    </LinearLayout>
</LinearLayout>
